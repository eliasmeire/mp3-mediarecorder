{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.ts"]
}
