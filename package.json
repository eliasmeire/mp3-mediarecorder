{
  "name": "mp3-mediarecorder",
  "version": "4.0.0",
  "description": "MediaRecorder ponyfill that records audio as mp3",
  "main": "dist/index.js",
  "module": "dist/index.es5.js",
  "es2015": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "worker",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "format": "npm run format:write",
    "format:write": "prettier --write **/*.{ts,js,yml,json,md}",
    "format:check": "prettier -l **/*.{ts,js,yml,json,md}",
    "tsc": "tsc --noEmit",
    "build": "del dist worker && rollup -c rollup.config.ts && cpy node_modules/vmsg/vmsg.wasm dist && cpy dist/worker/* worker && del dist/worker",
    "bundlesize": "bundlesize",
    "dev": "serve ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasmeire/mp3-mediarecorder.git"
  },
  "keywords": [
    "mediarecorder",
    "polyfill",
    "ponyfill",
    "mp3",
    "mediastream",
    "audio",
    "encoding",
    "libmp3lame",
    "webassembly",
    "vmsg",
    "record",
    "encode"
  ],
  "author": "Elias Meire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliasmeire/mp3-mediarecorder/issues"
  },
  "homepage": "https://github.com/eliasmeire/mp3-mediarecorder#readme",
  "devDependencies": {
    "@semantic-release/git": "8.0.0",
    "@types/dom-mediacapture-record": "1.0.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.8",
    "bundlesize": "0.18.0",
    "concurrently": "5.0.2",
    "cpy-cli": "^3.0.0",
    "del-cli": "^3.0.0",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "rollup": "1.29.1",
    "@rollup/plugin-buble": "0.21.0",
    "@rollup/plugin-node-resolve": "7.0.0",
    "rollup-plugin-sourcemaps": "0.5.0",
    "rollup-plugin-typescript2": "0.25.3",
    "semantic-release": "16.0.4",
    "serve": "11.3.0",
    "ts-jest": "24.3.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "event-target-shim": "github:cpmsmith/event-target-shim#sentry-infinite-recursion",
    "vmsg": "^0.3.6"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/index.umd.js",
      "maxSize": "7kB"
    },
    {
      "path": "dist/index.es5.js",
      "maxSize": "7kB"
    },
    {
      "path": "dist/index.es.js",
      "maxSize": "7kB"
    },
    {
      "path": "dist/index.js",
      "maxSize": "7kB"
    },
    {
      "path": "worker/index.umd.js",
      "maxSize": "2kB"
    },
    {
      "path": "worker/index.es5.js",
      "maxSize": "2kB"
    },
    {
      "path": "worker/index.es.js",
      "maxSize": "2kB"
    },
    {
      "path": "worker/index.js",
      "maxSize": "2kB"
    }
  ]
}
